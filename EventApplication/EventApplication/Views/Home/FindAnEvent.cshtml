
@{
    ViewBag.Title = "FindAnEvent";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/Apps/EventScripts.js"></script>
<h2 id="findevent">Find an event near you!</h2>

<div class="panel panel-default">
    <div class="panel-body" id="findeventbox">
        @using (Ajax.BeginForm("FindEvent", "Home",
        new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "GET",
            OnFailure = "searchFailed",
            LoadingElementId = "ajax-loader",
            UpdateTargetId = "searchresults",
        }))
        {
            <input type="text" name="t" placeholder="Event or Event Type" id="searchbutton" />
            <input type="text" name="l" placeholder="Location, City, or State" />
            <input type="submit" value="search" />
            <img id="ajax-loader"
                 src="@Url.Content("~/Content/Images/ajax-loader.gif")"
                 style="display:none" />
        }
        <div id="searchresults"></div>
    </div>
</div>

