@model EventApplication.Models.Order

@{
    ViewBag.Title = "Register";
}

<h2>Details</h2>
<p id="italics">Register</p>
<hr />
<p id="italics">@Html.DisplayFor(model => model.EventSelected.Title)</p>
<br />
<p id="details">Number of Tickets: <span id="bold">@Html.DisplayFor(model => model.TicketCount)</span></p>

<button id="btn">
    @Html.ActionLink("Checkout", "AddToOrder", "TicketsOrdered", new { id = Model.EventId }, null)
</button>